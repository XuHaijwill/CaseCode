		<!-- 解决maven项目默认不会把src下除java文件外的文件打包到classes文件夹下，需要在maven中增加配置 -->
		<!-- <resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources> -->
		<resources>
     <resource>
          <directory>src/main/java</directory>
         <includes>
        <include>**/*.xml</include>
      </includes>
  </resource>
  <resource>
   <directory>src/main/resources</directory>
  </resource>
 </resources>
		
